<UserControl x:Class="GenderHealthCareSystem.ServiceMangement.StisServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.ServiceMangement"
        mc:Ignorable="d"
       >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="btnAdd" Content="Thêm" Width="80" Margin="5" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Sửa" Width="80" Margin="5" Click="btnEdit_Click" />
            <Button x:Name="btnDelete" Content="Xoá" Width="80" Margin="5" Click="btnDelete_Click_1"/>
        </StackPanel>
        <DataGrid x:Name="dgServices"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ServiceId}" Width="Auto"/>
                <DataGridTextColumn Header="Tên dịch vụ" Binding="{Binding ServiceName}" Width="*" />
                <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="Auto"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price}" Width="Auto"/>
                <DataGridTextColumn Header="Thời lượng" Binding="{Binding Duration}" Width="Auto"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Count -->
        <TextBlock Grid.Row="2" HorizontalAlignment="Right" FontStyle="Italic" Margin="0,5">
            Tổng số: <Run x:Name="txtCount"/>
        </TextBlock>
    </Grid>
</UserControl>
