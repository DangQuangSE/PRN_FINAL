<Window x:Class="GenderHealthCareSystem.StisBookingFunc.StisBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.StisBookingFunc"
        mc:Ignorable="d"
        Title="Đặt lịch mới" Height="350" Width="400" 
        WindowStartupLocation="CenterOwner"
        FontFamily="Arial" FontSize="13">

    <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Center">

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label x:Name="lbservice" Content="Dịch vụ:" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbService" Width="200" DisplayMemberPath="ServiceName" SelectedValuePath="ServiceId"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label Content="Ngày hẹn:" Width="120" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpBookingDate" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label Content="Giờ hẹn:" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="tbBookingTime" Width="200">
                <ComboBoxItem Content="7:00"/>
                <ComboBoxItem Content="8:00"/>
                <ComboBoxItem Content="9:00"/>
                <ComboBoxItem Content="10:00"/>
                <ComboBoxItem Content="11:00"/>
                <!-- Nghỉ trưa từ 12:00 đến 14:00 -->
                <ComboBoxItem Content="14:00"/>
                <ComboBoxItem Content="15:00"/>
                <ComboBoxItem Content="16:00"/>
                <ComboBoxItem Content="17:00"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label x:Name="lbnote" Content="Ghi chú:" Width="120" VerticalAlignment="Center"/>
            <TextBox x:Name="tbNote" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label x:Name="lbpayment" Content="Phương thức thanh toán:" Width="120" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbPaymentMethod" Width="200">
                <ComboBoxItem Content="Thẻ tín dụng"/>
                <ComboBoxItem Content="Tiền mặt"/>
                <ComboBoxItem Content="Chuyển khoản ngân hàng"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Đồng ý" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Hủy" Width="80" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
