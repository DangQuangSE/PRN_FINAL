<UserControl x:Class="GenderHealthCareSystem.StisBookingFunc.ManageStisBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.StisBookingFunc"
        mc:Ignorable="d">
    <StackPanel>
        <DataGrid x:Name="dgStisBookingList" AutoGenerateColumns="False" CanUserAddRows="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Booking Id" Width="0.7*" Binding="{Binding BookingId}"/>
                <DataGridTextColumn Header="Customer Name" Width="0.7*" Binding="{Binding Customer.FullName}"/>
                <DataGridTextColumn Header="Service Name" Width="1*" Binding="{Binding Service.ServiceName}"/>
                <DataGridTextColumn Header="Price" Width="1*" Binding="{Binding Service.Price}"/>
                <DataGridTextColumn Header="Booking Date" Width="1*" Binding="{Binding BookingDate}"/>
                <DataGridTextColumn Header="Status" Width="1*" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Notes" Width="1*" Binding="{Binding Note}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtSearch" Width="500"/>
            <Button x:Name="SearchBtn" Content="Search" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="btnstatus" Content="update status" Click="btnstatus_Click"/>
            <Button x:Name="btnAddResult" Content="Add result" Click="btnAddResult_Click"/>
        </StackPanel>
        <Popup Placement="Center" IsOpen="False" x:Name="ppStatus">
            <StackPanel Orientation="Vertical" Margin="1" Background="White" Width="300" Height="200">
                <Label Content="Update Booking Status" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <ComboBox x:Name="cbBookingStatus" Width="200">
                    <ComboBoxItem Content="PENDING"/>
                    <ComboBoxItem Content="FAILED_PAYMENT"/>
                    <ComboBoxItem Content="CONFIRMED"/>
                    <ComboBoxItem Content="PENDING_TEST_RESULT"/>
                    <ComboBoxItem Content="COMPLETED"/>
                    <ComboBoxItem Content="NO_SHOW"/>
                    <ComboBoxItem Content="DENIED"/>
                </ComboBox>
                <Button x:Name="btnUpdateStatus" Content="update status" Click="btnUpdateStatus_Click"/>
                <Button x:Name="btnClosePopup" Content="Close" Click="btnClosePopup_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Popup>
        <Popup Placement="Center" IsOpen="False" x:Name="ppresult">
            <StackPanel Orientation="Vertical" Margin="1" Background="White" Width="600" Height="600">
                <Label Content="Update add result" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBox x:Name="txtResult" Width="400" Height="400" Margin="0,0,0,10"  TextWrapping="Wrap"
    AcceptsReturn="True"
    AcceptsTab="True"
    VerticalScrollBarVisibility="Auto"/>
                <Button x:Name="btnaddresult" Content="add result" Click="btnaddresult_Click"/>
                <Button Content="Close" Click="btnClosePopup_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </Popup>

    </StackPanel>
</UserControl>
