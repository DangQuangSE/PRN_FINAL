<Window x:Class="GenderHealthCareSystem.StisBookingFunc.StisBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.StisBookingFunc"
        mc:Ignorable="d"
        Title="StisBookingWindow" 
        Height="500"
        Width="800"
        FontFamily="Arial"
        FontSize="13"
        Background="#FFD0E8D0"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FF2E7D32"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="16"/>
            <Setter Property="Background" Value="#FFECF9EC"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FF388E3C"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <StackPanel>
        <DataGrid x:Name="dgStisBookingList" AutoGenerateColumns="False" CanUserAddRows="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Booking Id" Width="0.7*" Binding="{Binding BookingId}"/>
                <DataGridTextColumn Header="Patient Name" Width="1*" Binding="{Binding PatientName}"/>
                <DataGridTextColumn Header="Service Name" Width="1*" Binding="{Binding Service.ServiceName}"/>
                <DataGridTextColumn Header="Booking Date" Width="1*" Binding="{Binding BookingDate}"/>
                <DataGridTextColumn Header="Status" Width="1*" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Notes" Width="1*" Binding="{Binding Notes}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="txtSearch" Width="500"/>
            <Button x:Name="SearchBtn" Content="Search" Click="SearchBtn_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button x:Name="btnAdd" Content="Add New Booking" Click="Add_Click"/>

            <Button x:Name="btnDelete" Content="cancel Booking" Click="Delete_Click"/>
        </StackPanel>

    </StackPanel>
</Window>




