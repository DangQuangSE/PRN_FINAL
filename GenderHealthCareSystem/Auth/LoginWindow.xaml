<Window x:Class="GenderHealthCareSystem.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.Auth"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f2f2f2">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="30"
                BorderBrush="#E0E0E0" BorderThickness="1"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="350">
            <StackPanel>
                <TextBlock Text="ĐĂNG NHẬP" FontSize="24" FontWeight="Bold"
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- Username -->
                <TextBlock Text="Tên đăng nhập" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox x:Name="txtUsername" Margin="0,0,0,15"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" Margin="0,0,0,5" Foreground="#555"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>

                <!-- Forgot Password -->
                <TextBlock HorizontalAlignment="Right" Margin="0,0,0,20">
                     <Hyperlink Foreground="{StaticResource PrimaryColor}" TextDecorations="None"
                                 >
                         Quên mật khẩu?
                     </Hyperlink>
                </TextBlock>

                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="Đăng nhập" Click="btnLogin_Click"
                        />

                <!-- Register -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Chưa có tài khoản? " VerticalAlignment="Center"/>
                    <TextBlock>
                        <Hyperlink Foreground="{StaticResource PrimaryColor}" TextDecorations="None" FontWeight="Bold"
                                   Click="SignUp_Click">
                            Đăng ký ngay
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>