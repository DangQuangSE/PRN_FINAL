<Window x:Class="GenderHealthCareSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gender Health Care System" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFD0E8D0">
    
    <StackPanel Margin="50" VerticalAlignment="Center">
        <TextBlock Text="Gender Health Care System" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"
                   Foreground="#FF2E7D32"/>
        
        <Button x:Name="btnStisBooking" 
                Content="STIs Booking Management" 
                Width="300" Height="50" Margin="0,10"
                Click="btnStisBooking_Click"/>
        
        <Button x:Name="btnConsultantBooking" 
                Content="Consultant Booking Management" 
                Width="300" Height="50" Margin="0,10"
                Click="btnConsultantBooking_Click"/>
        
        <Button x:Name="btnCustomerBooking" 
                Content="Customer Consultant Booking" 
                Width="300" Height="50" Margin="0,10"
                Click="btnCustomerBooking_Click"/>
    </StackPanel>
</Window>
