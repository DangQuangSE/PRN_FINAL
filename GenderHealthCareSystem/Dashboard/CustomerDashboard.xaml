<Window x:Class="GenderHealthCareSystem.Dashboard.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.Dashboard"
        mc:Ignorable="d"
        Title="Customer Dashboard" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TabControl>
            <!-- Tab 1: Edit Profile -->
            <TabItem Header="Chỉnh sửa hồ sơ">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Tên đăng nhập -->
                    <Label Content="Tên đăng nhập" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox Name="txtUsername" Grid.Row="0" Grid.Column="0" Margin="5,25,5,5" IsReadOnly="True"/>

                    <!-- Họ và tên -->
                    <Label Content="Họ và tên" Grid.Row="0" Grid.Column="1" Margin="5"/>
                    <TextBox Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="5,25,5,5"/>

                    <!-- Số điện thoại -->
                    <Label Content="Số điện thoại" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <TextBox Name="txtPhone" Grid.Row="1" Grid.Column="0" Margin="5,25,5,5"/>

                    <!-- Email -->
                    <Label Content="Email" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <TextBox Name="txtEmail" Grid.Row="1" Grid.Column="1" Margin="5,25,5,5" IsReadOnly="True"/>

                    <!-- Ngày sinh -->
                    <Label Content="Ngày sinh" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <DatePicker Name="dpBirthDate" Grid.Row="2" Grid.Column="0" Margin="5,25,5,5"/>

                    <!-- Giới tính -->
                    <Label Content="Giới tính" Grid.Row="2" Grid.Column="1" Margin="5"/>
                    <ComboBox Name="cbGender" Grid.Row="2" Grid.Column="1" Margin="5,25,5,5"/>

                    <!-- Địa chỉ -->
                    <Label Content="Địa chỉ" Grid.Row="3" Grid.Column="0" Margin="5"/>
                    <TextBox Name="txtAddress" Grid.Row="3" Grid.Column="0" Margin="5,25,5,5"/>

                    <!-- Nút Lưu -->
                    <Button Content="Lưu thay đổi"
                            x:Name="btnUpdateProfile"
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Width="150"
                    Height="35"
                    Margin="10"
                    HorizontalAlignment="Center" Click="btnUpdateProfile_Click" />
                    <Button Content="Xét nghiệm STIs" x:Name="btnTesting" Grid.Row="5" Width="200" Click="btnTesting_Click"/>
                    <Button Content="Tư vấn" x:Name="btnConsul" Grid.Row="5" Width="200" Grid.Column="1" Click="btnConsul_Click"/>
                </Grid>
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
