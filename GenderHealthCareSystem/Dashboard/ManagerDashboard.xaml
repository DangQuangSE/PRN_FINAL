<Window x:Class="GenderHealthCareSystem.Dashboard.ManagerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.Dashboard"
        xmlns:stis="clr-namespace:GenderHealthCareSystem.ServiceMangement" 
        xmlns:book="clr-namespace:GenderHealthCareSystem.StisBookingFunc"
        mc:Ignorable="d"
        Title="Manager Dashboard" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FFF0F8FF">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

            <TextBlock Text="TRANG QUẢN LÝ"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2E7D32"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button Content="Quản lý dịch vụ STIs"
                    x:Name="btnMangeService"
                    Width="300"
                    Height="50"
                    FontSize="16"
                    Click="btnMangeService_Click"
                    Margin="0 0 0 16"/>

            <Button Content="Quản lý lịch xét nghiệm"
                    x:Name="btnMangeStisBooking"
                    Width="300"
                    Height="50"
                    FontSize="16"
                    Click="btnMangeStisBooking_Click"
                    Margin="0 0 0 16"/>

            <Button Content="Quản lý lịch tư vấn"
                    x:Name="btnMangeConsulBooking"
                    Width="300"
                    Height="50"
                    FontSize="16" Click="btnMangeConsulBooking_Click"/>

        </StackPanel>
    </Grid>
</Window>
