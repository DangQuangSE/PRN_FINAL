<Window x:Class="GenderHealthCareSystem.ConsultantBookingFunc.ManageConsultantBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.ConsultantBookingFunc"
        mc:Ignorable="d"
        Title="Quản lý lịch hẹn tư vấn"
        Height="800"
        Width="1200"
        FontFamily="Arial"
        FontSize="13"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#0099CF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Nút quay lại -->
        <Button x:Name="btnBack" Content="← Quay lại" 
                DockPanel.Dock="Top"
                Margin="10"
                HorizontalAlignment="Left" Click="btnBack_Click"/>

        <StackPanel>
            <!-- Bảng danh sách lịch hẹn -->
            <DataGrid x:Name="dgConsultantBookingList" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã hẹn" Width="0.7*" Binding="{Binding BookingId}"/>
                    <DataGridTextColumn Header="Khách hàng" Width="1*" Binding="{Binding Customer.FullName}"/>
                    <DataGridTextColumn Header="Tư vấn viên" Width="1*" Binding="{Binding Consultant.FullName}"/>
                    <DataGridTextColumn Header="Ngày hẹn" Width="1.2*" Binding="{Binding BookingDate}"/>
                    <DataGridTextColumn Header="Trạng thái" Width="1*" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Thanh toán" Width="1*" Binding="{Binding PaymentStatus}"/>
                    <DataGridTextColumn Header="Link họp" Width="1.5*" Binding="{Binding MeetLink}"/>
                    <DataGridTextColumn Header="Ghi chú" Width="1.2*" Binding="{Binding Note}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Tìm kiếm -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBox x:Name="txtSearch" Width="500"/>
                <Button x:Name="SearchBtn" Content="Tìm kiếm" Click="SearchBtn_Click"/>
            </StackPanel>

            <!-- Các nút hành động -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnStatus" Content="Cập nhật trạng thái" Click="btnStatus_Click" Margin="5"/>
                <Button x:Name="btnGenerateLink" Content="Thêm link họp" Click="btnGenerateLink_Click" Margin="5"/>
            </StackPanel>

            <!-- Popup cập nhật trạng thái -->
            <Popup Placement="Center" IsOpen="False" x:Name="ppStatus">
                <StackPanel Orientation="Vertical" Margin="10" Background="White" Width="300" Height="250">
                    <Label Content="Cập nhật trạng thái lịch hẹn" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <Label Content="Trạng thái lịch hẹn:"/>
                    <ComboBox x:Name="cbBookingStatus" Width="200">
                        <ComboBoxItem Content="Đang chờ"/>
                        <ComboBoxItem Content="Đã xác nhận"/>
                        <ComboBoxItem Content="Đã hoàn tất"/>
                        <ComboBoxItem Content="Đã hủy"/>
                    </ComboBox>

                    <Label Content="Trạng thái thanh toán:" Margin="0,10,0,5"/>
                    <ComboBox x:Name="cbPaymentStatus" Width="200">
                        <ComboBoxItem Content="Chưa thanh toán"/>
                        <ComboBoxItem Content="Đã thanh toán"/>
                        <ComboBoxItem Content="Đã hoàn tiền"/>
                    </ComboBox>

                    <Button x:Name="btnUpdateStatus" Content="Cập nhật" Click="btnUpdateStatus_Click" Margin="0,10,0,0"/>
                    <Button x:Name="btnClosePopup" Content="Đóng" Click="btnClosePopup_Click" Margin="0,10,0,0"/>
                </StackPanel>
            </Popup>
        </StackPanel>
    </DockPanel>
</Window>
