<Window x:Class="GenderHealthCareSystem.ConsultantBookingFunc.MeetLinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.ConsultantBookingFunc"
        mc:Ignorable="d"
        Title="Thêm Link Cuộc Họp" Height="500" Width="500" 
        WindowStartupLocation="CenterOwner"
        FontFamily="Arial" FontSize="13">

    <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Center">

        <TextBlock Text="Thiết lập link cuộc họp" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#FF2E7D32"/>

        <TextBlock Text="Khách hàng:" FontWeight="Bold" Margin="0,5" Foreground="#FF2E7D32"/>
        <TextBlock x:Name="tbCustomerInfo" Margin="0,0,0,10" Foreground="#FF666666"/>

        <TextBlock Text="Ngày đặt lịch:" FontWeight="Bold" Margin="0,5" Foreground="#FF2E7D32"/>
        <TextBlock x:Name="tbBookingInfo" Margin="0,0,0,10" Foreground="#FF666666"/>

        <TextBlock Text="Link cuộc họp: *" FontWeight="Bold" Margin="0,5" Foreground="#FF2E7D32"/>
        <TextBox x:Name="tbMeetLink" Height="30" Margin="0,5,0,10" 
                 Text="https://meet.google.com/" FontSize="12"/>

        <TextBlock Text="Nền tảng họp phổ biến:" FontStyle="Italic" Margin="0,5" Foreground="#FF888888"/>
        <StackPanel Orientation="Vertical" Margin="0,5,0,15">
            <Button x:Name="btnZoom" Content="Tạo link Zoom" Width="240" Height="30" Margin="0,2" Click="btnZoom_Click"/>
            <Button x:Name="btnGoogleMeet" Content="Tạo link Google Meet" Width="240" Height="30" Margin="0,2" Click="btnGoogleMeet_Click"/>
            <Button x:Name="btnTeams" Content="Tạo link Microsoft Teams" Width="240" Height="30" Margin="0,2" Click="btnTeams_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Lưu link" Width="100" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Hủy" Width="80" Click="Cancel_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
