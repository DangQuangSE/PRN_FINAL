<Window x:Class="GenderHealthCareSystem.ConsultantBookingFunc.ConsultantBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.ConsultantBookingFunc"
        mc:Ignorable="d"
        Title="New Consultant Booking" Height="400" Width="500" 
        WindowStartupLocation="CenterOwner"
        Background="#FFD0E8D0" FontFamily="Arial" FontSize="13">
    <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock Text="Book Consultant Appointment" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#FF2E7D32"/>
        
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label x:Name="lbConsultant" Content="Consultant: *" Width="120" VerticalAlignment="Center" Foreground="#FF2E7D32"/>
            <ComboBox x:Name="cbConsultant" Width="250" DisplayMemberPath="FullName" SelectedValuePath="UserId"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label Content="Booking Date: *" Width="120" VerticalAlignment="Center" Foreground="#FF2E7D32"/>
            <DatePicker x:Name="dpBookingDate" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label Content="Booking Time: *" Width="120" VerticalAlignment="Center" Foreground="#FF2E7D32"/>
            <ComboBox x:Name="tbBookingTime" Width="250">
                <ComboBoxItem Content="8:00"/>
                <ComboBoxItem Content="9:00"/>
                <ComboBoxItem Content="10:00"/>
                <ComboBoxItem Content="11:00"/>
                <ComboBoxItem Content="14:00"/>
                <ComboBoxItem Content="15:00"/>
                <ComboBoxItem Content="16:00"/>
                <ComboBoxItem Content="17:00"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label x:Name="lbNote" Content="Note:" Width="120" VerticalAlignment="Top" Foreground="#FF2E7D32"/>
            <TextBox x:Name="tbNote" Width="250" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
        
        <TextBlock Text="* Required" 
                   FontStyle="Italic" 
                   Margin="0,10,0,0"
                   Foreground="Red"
                   HorizontalAlignment="Right"/>
        
        <TextBlock Text="Note: You can only book within 30 days and at least 30 minutes in advance." 
                   FontStyle="Italic" 
                   Margin="0,5,0,0"
                   Foreground="#FF666666"
                   TextWrapping="Wrap"/>
        
        <TextBlock Text="Meeting link will be provided by consultant after confirmation." 
                   FontStyle="Italic" 
                   Margin="0,5,0,0"
                   Foreground="#FF4CAF50"
                   TextWrapping="Wrap"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Book Now" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>