<Window x:Class="GenderHealthCareSystem.ConsultantBookingFunc.ConsultantBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenderHealthCareSystem.ConsultantBookingFunc"
        mc:Ignorable="d"
        Title="Danh sách lịch tư vấn" 
        Height="500"
        Width="900"
        FontFamily="Arial"
        FontSize="13"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#0099CF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Nút quay lại -->
        <Button x:Name="btnBack" Content="← Quay lại" 
                DockPanel.Dock="Top"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel>
            <!-- Bảng dữ liệu -->
            <DataGrid x:Name="dgConsultantBookingList" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã lịch hẹn" Width="0.7*" Binding="{Binding BookingId}"/>
                    <DataGridTextColumn Header="Tên tư vấn viên" Width="1.2*" Binding="{Binding Consultant.FullName}"/>
                    <DataGridTextColumn Header="Ngày hẹn" Width="1.2*" Binding="{Binding BookingDate}"/>
                    <DataGridTextColumn Header="Trạng thái" Width="1*" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Thanh toán" Width="1*" Binding="{Binding PaymentStatus}"/>
                    <DataGridTextColumn Header="Liên kết họp" Width="1.5*" Binding="{Binding MeetLink}"/>
                    <DataGridTextColumn Header="Ghi chú" Width="1.2*" Binding="{Binding Note}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Các nút thao tác -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnAdd" Content="Tạo lịch hẹn mới" Click="Add_Click" Margin="5"/>
                <Button x:Name="btnEdit" Content="Thay đổi ngày hẹn" Click="btnEdit_Click" Margin="5"/>
                <Button x:Name="btnDelete" Content="Hủy lịch hẹn" Click="Delete_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
